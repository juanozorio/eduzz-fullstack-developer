{
  "compilerOptions": {
    "target": "es5",                                    
    "module": "commonjs",   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "skipLibCheck": true,
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],
    "outDir": "./dist",
    "removeComments": true,
    "strict": true                 
  }
}
